<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gensys.smartmoney.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/ironman"

    android:weightSum="1">
    <!--  android:digits="0123456789." -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.00">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/curProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="0.00"
                android:background="@drawable/shape"
                android:ems="10"
                android:textAlignment="center"
                android:textColorLink="@color/colorPrimaryDark"></android.support.v7.widget.AppCompatSpinner>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <EditText
                android:id="@+id/prof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Place IP here"
                android:inputType="text"
                android:text="prof1"
                android:textAlignment="center"
                android:textColorLink="@color/colorPrimaryDark" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <EditText
                android:id="@+id/limitrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Place IP here"
                android:inputType="number"
                android:text="100"
                android:textAlignment="center"
                android:textColorLink="@color/colorPrimaryDark" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Place IP here"
                android:inputType="textPersonName"
                android:text="+639394380608"
                android:textAlignment="center"
                android:textColorLink="@color/colorPrimaryDark" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <EditText
                android:id="@+id/ipseries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Place IP here"
                android:inputType="text"
                android:text="192.168.43.77"
                android:textAlignment="center"
                android:textColorLink="@color/colorPrimaryDark" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <EditText
                android:id="@+id/path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Place IP here"
                android:inputType="text"
                android:text="/smartmoney/android/insert.php"
                android:textAlignment="center"
                android:textColorLink="@color/colorPrimaryDark" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:background="@drawable/shape"
                android:checked="false"

                android:onClick="activate"
                android:soundEffectsEnabled="true"
                android:text="Auto Sync"

                android:textStyle="normal|bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:background="@drawable/shape"
                android:checked="false"

                android:onClick="activate2"
                android:soundEffectsEnabled="true"
                android:text="Auto Forward"

                android:textStyle="normal|bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />
            <Switch
                android:id="@+id/switch5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:background="@drawable/shape"
                android:checked="true"


                android:onClick="lockSetting"
                android:soundEffectsEnabled="true"
                android:text="Lock Settings"

                android:textStyle="normal|bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:onClick="saveSetting"
                android:text="Add this setting" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:onClick="deleteProf"
                android:text="Delete Profile" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <Button
                android:id="@+id/btnManual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:onClick="syncManual"
                android:text="Manual Sync" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:onClick="appClose"
                android:text="Close this app" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_weight="0.00" />

            <TextView
                android:id="@+id/txtProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00" />

            <EditText
                android:id="@+id/txtProg"

                android:layout_width="match_parent"

                android:layout_height="154dp"
                android:layout_weight="0.00"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textColor="@color/colorAccent"
                android:textSize="4dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
