<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gensys.smartmoney.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/ironman"


    android:weightSum="1">
    <!--  android:digits="0123456789." -->
    <EditText
        android:id="@+id/ipseries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Place IP here"
        android:inputType="text"
        android:text="192.168.88.188"
        android:textAlignment="center"
        android:textColorLink="@color/colorPrimaryDark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40px" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/address"
        android:layout_weight="0.00"
        android:hint="Place IP here"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textColorLink="@color/colorPrimaryDark"
        android:text="+639394380608" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40px" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/limitrow"
        android:layout_weight="0.00"
        android:hint="Place IP here"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textColorLink="@color/colorPrimaryDark"
        android:text="100" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40px" />

    <Button
        android:id="@+id/btnManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:onClick="syncManual"
        android:text="Manual Sync" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_weight="0.00" />


    <Switch
        android:text="Auto Forward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_weight="0.08"
        android:onClick="activate"

        android:soundEffectsEnabled="true"
        android:checked="false"
        android:background="@drawable/shape"

        android:textStyle="normal|bold" />


    <EditText
        android:inputType="textMultiLine"

    android:gravity="top|left"

    android:layout_height="154dp"
    android:layout_width="fill_parent"
    android:scrollbars="vertical"
        android:textSize="4dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/txtProg" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_weight="0.22" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtProgress"
        android:layout_weight="0.00"
        android:textColor="@color/colorAccent"
        android:textAlignment="center" />

</LinearLayout>
